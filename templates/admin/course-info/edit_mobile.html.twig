{% extends 'admin/base_mobile.html.twig' %}

{% block title %}Панель управления | Документы{% endblock %}

{% block breadcrumbs %}
    <a href="{{ path('admin_homepage') }}">Панель управления</a>
    <span>/</span>
    <a href="{{ path('admin_course_list') }}">Учебные материалы</a>
    <span>/</span>
    <a href="{{ path('admin_course_edit', {id: form.vars['value'].course.id }) }}">Редактирование курса</a>
    <span>/</span>
    <span>Документы</span>
{% endblock %}

{% block content %}

    <h3>
        {% if form.vars['value'].id is null %}
            Создание нового документа
        {% else %}
            Редактирование документа
        {% endif %}
    </h3>

    {{ form_start(form, {'attr':{'class': 'form-contact contact_form'}}) }}

    <div class="row">

        <div class="col-12 mb-3">
            {{ form_label(form.name) }}
            <div class="col-sm-12">
                <span class="text-danger">{{ form_errors(form.name) }}</span>
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="col-12 mb-3">
            {{ form_label(form.fileName) }}
            <div class="col-sm-12">
                <span class="text-danger">{{ form_errors(form.fileName) }}</span>
                {{ form_widget(form.fileName) }}
            </div>
        </div>

        <div class="form-group col-12 mb-3">
            {{ form_widget(form.submit) }}
        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}