{% extends 'admin/base.html.twig' %}

{% block title %}Панель управления | Документы{% endblock %}

{% block breadcrumbs %}
    <a href="{{ path('admin_homepage') }}">Панель управления</a>
    <span>/</span>
    <a href="{{ path('admin_course_list') }}">Учебные материалы</a>
    <span>/</span>
    <a href="{{ path('admin_course_edit', {id: form.vars['value'].course.id }) }}">Редактирование курса</a>
    <span>/</span>
    <span>Документы</span>
{% endblock %}

{% block content %}

    <h3>
        Пакетная загрузка
    </h3>

    {{ form_start(form, {'attr':{'class': 'form-contact contact_form'}}) }}

    <div class="row">

        <div class="mb-3 row">
            {{ form_label(form.fileName) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.fileName) }}</span>
                {{ form_widget(form.fileName) }}
            </div>
        </div>

        <div class="form-group mb-3 offset-2">
            {{ form_widget(form.submit) }}
        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}
