<div class="mb-3">
    <label for="duration" class="form-label">Укажите число дней доступа</label>
    <input class="form-control" name="duration" id="duration">
</div>

<div class="row">
    <div class="col-6">
        <div class="mb-3">
            <label for="course-select" class="form-label">Выберите курсы</label>
            <select class="form-select" id="course-select" name="course-select" size="10" multiple>
                {% for item in course %}
                    <option class="course-select-item" data-profile="{{ item['profileId'] }}" value="{{ item['id'] }}">
                        {{ item.courseType }} {{ item.shortName }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="col-6">
        <div class="mb-3">
            <label for="course-selected" class="form-label">Выбранные курсы</label>
            <select class="form-select" id="course-selected" name="course-selected" size="10" multiple>
            </select>
        </div>
    </div>
</div>

<div class="mb-3">
    <label for="q-search" class="form-label">Быстрый поиск</label>
    <input class="form-control" name="q-search" id="q-search">
</div>

<div class="mb-3">
    <label for="profile-select" class="form-label">Профиль</label>
    <select class="form-select" id="profile-select" name="course-select">
        <option value="0">Все профили</option>
        {% for profile in profiles %}
            <option value="{{ profile['id'] }}">{{ profile['name'] }}</option>
        {% endfor %}
    </select>
</div>

<button class="btn btn-outline-primary" id="send-to-query" data-url="{{ path('admin_loader_send_to_query') }}">Продолжить</button>
