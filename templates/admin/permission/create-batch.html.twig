{% extends 'admin/base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block content %}

    <h3>
        Массовое назначение доступов для: {{ user.fullname }}
    </h3>

    {{ form_start(form, {'attr':{'class': 'form-contact contact_form'}}) }}

    <div class="row">

        <div class="mb-3 row">
            {{ form_label(form.duration) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.duration) }}</span>
                {{ form_widget(form.duration) }}
            </div>
        </div>

        <div class="mb-3 row">
            {{ form_label(form.orderNom) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.orderNom) }}</span>
                {{ form_widget(form.orderNom) }}
            </div>
        </div>

        <div class="mb-3 row">
            {{ form_label(form.course) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.course) }}</span>
                {{ form_widget(form.course) }}
            </div>
        </div>

        <div class="mb-3 row">
            {{ form_label(form.lifeSearch) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.lifeSearch) }}</span>
                {{ form_widget(form.lifeSearch) }}
            </div>
        </div>

        <div class="mb-3 row">
            {{ form_label(form.profile) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.profile) }}</span>
                {{ form_widget(form.profile) }}
            </div>
        </div>

        <div class="form-group mb-3">
            {{ form_widget(form.submit) }}
        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}
