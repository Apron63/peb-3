                </div>
                <div class="card-body">
                    {{ form_widget(form.userHasNewPermissionMax) }}
                </div>
            </div>
        </div>

        <p></p>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    {{ form_label(form.userHasActivatedPermissionMax) }}
                </div>
                <div class="card-body">
