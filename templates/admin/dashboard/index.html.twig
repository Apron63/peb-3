                </div>
                <div class="card-body">
                    {{ form_widget(form.userHasNewPermissionWhatsapp) }}
                </div>
            </div>
        </div>

        <p></p>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    {{ form_label(form.userHasActivatedPermissionWhatsapp) }}
                </div>
                <div class="card-body">
                    {{ form_widget(form.userHasActivatedPermissionWhatsapp) }}
                </div>
            </div>
        </div>

        <p></p>

