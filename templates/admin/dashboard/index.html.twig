                </div>
                <div class="card-body">
                    {{ form_widget(form.permissionWillEndSoonMax) }}
                </div>
            </div>
        </div>

        <p></p>

        <div class="col-12">
            {{ form_row(form.actionSubmit) }}
        </div>
    {{ form_end(form) }}

{% endblock %}
