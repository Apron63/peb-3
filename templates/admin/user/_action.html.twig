{{ form_start(actionForm, {'attr': {'class': 'row g-3'}, 'action': path('admin_action_report')}) }}
<div class="col-5">
    <div class="row">
        <div class="col-3">
            {{ form_label(actionForm.startAt) }}
        </div>
        <div class="col-9">
            {{ form_widget(actionForm.startAt) }}
        </div>
    </div>
</div>
<div class="col-5">
    <div class="row">
        <div class="col-3">
            {{ form_label(actionForm.endAt) }}
        </div>
        <div class="col-9">
            {{ form_widget(actionForm.endAt) }}
        </div>
    </div>
</div>
<div class="col-2">
    {{ form_widget(actionForm.actionSubmit) }}
</div>
{{ form_end(actionForm) }}

<div class="row">
    <table class="table">
        <thead>
        <tr>
            <th>Начало</th>
            <th>Завершение</th>
            <th>Курс</th>
            <th>Описание</th>
        </tr>
        </thead>

        <tbody>
            {# {% for action in actionPagination %}
                <tr>
                    <td>{{ action.startAt | date("d.m.Y H:i:s") }}</td>
                    <td>
                        {% if action.endAt is not null %}
                            {{ action.endAt | date("d.m.Y H:i:s") }}
                        {% else %}
                            Не определено
                        {% endif %}
                    </td>
                    <td>
                        {% if action.course is not null %}
                            {{ action.course.shortName }}
                        {% endif %}
                    </td>
                    <td>{{ action.note }}</td>
                </tr>
            {% endfor %} #}
        </tbody>
    </table>
</div>

<nav aria-label="navigator">
    {# {{ knp_pagination_render(actionPagination) }} #}
</nav>

<script>
    const startDatepickerElem = document.getElementById('action_interval_startAt');
    const startDatepicker = new Datepicker(startDatepickerElem, {
        format: 'dd.MM.yyyy',
        language: 'ru',
        autohide: true
    })

    const endDatepickerElem = document.getElementById('action_interval_endAt');
    const endDatepicker = new Datepicker(endDatepickerElem, {
        format: 'dd.MM.yyyy',
        language: 'ru',
        autohide: true
    })
</script>