{{ form_start(form, {'attr':{'class': 'form-contact contact_form', 'id': 'user-edit-form'}}) }}

<div class="row">

    <div class="mb-3 row">
        {{ form_label(form.login) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.login) }}</span>
            {{ form_widget(form.login) }}
        </div>
    </div>

    {% if passwordVisible %}
        <div class="mb-3 row">
            {{ form_label(form.plainPassword) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.plainPassword) }}</span>
                <div class="input-group">
                    {{ form_widget(form.plainPassword) }}
                    <span
                        class="input-group-text"
                        id="change-user-password"
                        data-url="{{ path('admin_user_change_password', {id: form.vars.value.id}) }}"
                        title="Сменить пароль"
                    >
                        <img src="{{ asset('svg/key.svg') }}">
                    </span>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="mb-3 row">
        {{ form_label(form.lastName) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.lastName) }}</span>
            {{ form_widget(form.lastName) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.firstName) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.firstName) }}</span>
            {{ form_widget(form.firstName) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.patronymic) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.patronymic) }}</span>
            {{ form_widget(form.patronymic) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.organization) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.organization) }}</span>
            {{ form_widget(form.organization) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.position) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.position) }}</span>
            {{ form_widget(form.position) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.email) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.email) }}</span>
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.contact) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.contact) }}</span>
            {{ form_widget(form.contact) }}
        </div>
    </div>

    <div class="mb-3 row">
        {{ form_label(form.mobilePhone) }}
        <div class="col-sm-10">
            <span class="text-danger">{{ form_errors(form.mobilePhone) }}</span>
            {{ form_widget(form.mobilePhone) }}
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="mb-3 row">
            {{ form_label(form.roles) }}
            <div class="col-sm-10">
                <span class="text-danger">{{ form_errors(form.roles) }}</span>
                {{ form_widget(form.roles) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-10">
                <div class="form-check form-switch">
                    <span class="text-danger">{{ form_errors(form.active) }}</span>
                    {{ form_widget(form.active) }}
                    {{ form_label(form.active) }}
                </div>
            </div>
        </div>
    {% endif %}

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-10">
                <div class="form-check form-switch">
                    <span class="text-danger">{{ form_errors(form.nameLess) }}</span>
                    {{ form_label(form.nameLess) }}
                    {{ form_widget(form.nameLess) }}
                </div>
            </div>
        </div>
    {% endif %}

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-10">
                <div class="form-check form-switch">
                    <span class="text-danger">{{ form_errors(form.whatsappConfirmed) }}</span>
                    {{ form_label(form.whatsappConfirmed) }}
                    {{ form_widget(form.whatsappConfirmed) }}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="form-group mb-3 offset-2">
        {{ form_widget(form.submit) }}
        {% if user.id is not null %}
            <a href="{{ path('admin_user_info', {id: user.id}) }}" target="_blank" class="btn btn-outline-primary">Сведения</a>
            <a href="{{ path('admin_user_whatsapp_resend', {id: user.id}) }}" class="btn btn-outline-secondary">
                <img src="{{ asset('svg/whatsapp.svg') }}">
                Информировать заново
            </a>
        {% endif %}
    </div>

</div>
{{ form_end(form) }}
