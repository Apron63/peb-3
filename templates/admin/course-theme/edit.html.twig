{% extends 'admin/base.html.twig' %}

{% block title %}Панель управления | Тематика{% endblock %}

{% block breadcrumbs %}
    <a href="{{ path('admin_homepage') }}">Панель управления</a>
    <span>/</span>
    <a href="{{ path('admin_course_list') }}">Учебные материалы</a>
    <span>/</span>
    <a href="{{ path('admin_course_edit', {id: form.vars['value'].course.id }) }}">Редактирование курса</a>
    <span>/</span>
    <span>Темы</span>
{% endblock %}

{% block content %}

    <h3>
        {% if form.vars['value'].id is null %}
            Создание новой темы
        {% else %}
            Редактирование темы
        {% endif %}
    </h3>

    {{ form_start(form, {'attr':{'class': 'form-contact contact_form'}}) }}

    <div class="row">

        <div class="col-10 mb-3">
            <div class="form-group">
                <span class="text-danger">{{ form_errors(form.name) }}</span>
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="col-10 mb-3">
            <div class="form-group">
                <span class="text-danger">{{ form_errors(form.description) }}</span>
                {{ form_widget(form.description) }}
            </div>
        </div>

        {% if form.vars['value'].id is not null %}
            {% include'admin/course-theme/_questions.html.twig' %}
        {% endif %}

        <div class="form-group mb-3">
            {{ form_widget(form.submit) }}
        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}